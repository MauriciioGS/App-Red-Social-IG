<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_menu"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.unam.appredsocialig.ui.fragments.HomeFragment"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>

    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.unam.appredsocialig.ui.fragments.SearchFragment"
        tools:layout="@layout/fragment_search">
        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>

    </fragment>

    <activity
        android:id="@+id/camaraActivity"
        android:name="com.unam.appredsocialig.ui.fragments.Camera"
        android:label="activity_camara"
        tools:layout="@layout/activity_camera" >
        <argument
            android:name="ShowAppBar"
            android:defaultValue="true"/>
    </activity>

</navigation>